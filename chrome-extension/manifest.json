{
  "manifest_version": 3,
  "name": "CadenceFlow - LinkedIn Auto-Add",
  "version": "1.0.0",
  "description": "Add LinkedIn profiles to your CadenceFlow email sequences with one click",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "http://localhost:3000/*",
    "http://localhost:3000/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "http://127.0.0.1:3000/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["http://localhost:3000/*", "http://127.0.0.1:3000/*"],
      "js": ["app-content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}


